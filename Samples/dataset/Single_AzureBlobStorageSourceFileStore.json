			"referenceName": "AzureBlobStorage_LS",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"folder": {
				"type": "String"
			},
			"filename": {
				"type": "String"
			}
		},
		"type": "AzureBlob",
		"typeProperties": {
			"fileName": {
				"value": "@dataset().filename",
				"type": "Expression"
			},
			"folderPath": {
				"value": "@dataset().folder",
				"type": "Expression"
			}
		}
	}
}